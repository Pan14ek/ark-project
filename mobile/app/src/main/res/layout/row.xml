<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Filter title"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/filterInfoText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Unit title"
            android:textColor="#a9a9a9"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/unitInfoText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Date"
            android:textColor="#a9a9a9"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/dateInfoText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="temperature"
            android:textColor="#a9a9a9"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/temperatureInfoText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Filter contamination"
            android:textColor="#a9a9a9"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/filterContaminationInfoText" />

    </LinearLayout>

</LinearLayout>